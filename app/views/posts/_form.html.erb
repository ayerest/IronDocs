<%=form_for(@post) do |f|%>
    <%=f.label :title%>
    <%=f.text_field :title%>

    <%=f.label :content%>
    <%=f.text_area :content%>

    <%=f.label :urgency_level%>
    <%=f.text_field :urgency_level%>

    <%=f.label :public_access%>
    <%=f.text_field :public_access%>
    
