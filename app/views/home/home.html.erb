
<div class="container">
        <%=form_tag public_search_path do%>
            <%=text_field_tag 'search'%>
            <%=submit_tag "Search for Public Projects and Users"%>
        <%end%>

<% if @projects.count > 0 %>
    <h3>Public Projects</h3>
    
    <% @projects.each do |p|%>
        <ul>
        <li>Title: <%= link_to p.title, project_path(p)%> - views: <%=p.views%></li>
        <li>Description: <%=p.description%></li>
        <hr>
        </ul>
    <%end%>

<%end%>

<% if @users.count > 0 %>
    <h3>Users</h3>
    <% @users.each do |u|%>
        <li><%= link_to u.username, user_path(u)%></li>
    <%end%>
<%end%>
</div>