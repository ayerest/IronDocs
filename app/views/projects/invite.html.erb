<%=link_to "Back to #{@project.title} Directory", project_path(@project) %>
<h1>Invite Collaborators</h1>

<%=form_tag '/projects/invite' do %>
    Search: <%=text_field_tag "search"%>
    <%=submit_tag "Apply Search"%>
<%end%>

<%if @users.length > 0%>
    <ol>
    <%@users.each do |user| %>
        <li> <%=link_to user.username, "/projects/invite/user/#{user.id}"%></li>
    <%end%>
    </ol>
<%end%>
