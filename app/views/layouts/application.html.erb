<!DOCTYPE html>
<html>
  <head>
    <title>IronDocsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
      <ul class="nav">
          <li><%= link_to "Home", home_path%></li>
          <% if logged_in? %>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
            <li><%= link_to "My Profile", user_path(session[:user_id])%></li>
          <%else%>
            <li><%=link_to "Sign In", '/login'%></li>
          <% end %>
          <%if !!cookies[:last_user_id] && cookies[:last_user_id].to_i != session[:user_id] %>
            <li><%=link_to "Back to #{User.get_name(cookies[:last_user_id])}", user_path(cookies[:last_user_id])%></li>
          <%end%>
      </ul>
  </nav>
    <h1>IronDocs</h1>
      <%= yield %>
  </body>
</html>
